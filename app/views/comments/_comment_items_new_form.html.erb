<%= form_with(model: @item, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :item_title %>

    <%= f.text_field :item_title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :item_picture %>

    <%= f.file_field :item_picture, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :item_price %>

    <%= f.text_field :item_price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category_id %>

    <%= f.collection_select :category_id, Category.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :item_description %>

    <%= f.text_field :item_description, class: "form-control" %>
  </div>

  <%= f.hidden_field :seller_id, value: current_user.id %>

  <%= f.hidden_field :comment_id, value: @comment.id %>

  <%= f.submit "Create item", class: "btn btn-block btn-outline-secondary" %>
<% end %>
